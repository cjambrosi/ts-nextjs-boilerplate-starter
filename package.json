{
  "name": "cjambrosi.dev",
  "version": "0.1.0",
  "private": true,
  "description": "My personal blog",
  "author": {
    "name": "Cristian J. Ambrosi",
    "url": "https://cjambrosi.dev.br"
  },
  "homepage": "https://github.com/cjambrosi/cjambrosi.dev#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjambrosi/cjambrosi.dev.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --pretty --noEmit",
    "test": "jest --maxWorkers=50% --silent",
    "test:unit": "jest --watch",
    "test:staged": "jest --maxWorkers=25% --bail --silent --coverage --coverageReporters=cobertura",
    "test:debug": "jest --no-cache --watch",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "nextjs",
    "react",
    "personal",
    "portfolio",
    "cjambrosi",
    "blog",
    "programmer",
    "developer",
    "software engineer",
    "tutorials",
    "articles",
    "development",
    "software",
    "computer science",
    "front-end",
    "back-end"
  ],
  "dependencies": {
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "next": "13.4.6",
    "next-intl": "^2.17.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.0-rc.6",
    "typescript": "5.1.3",
    "zustand": "^4.3.8"
  },
  "resolutions": {
    "styled-components": "^5"
